    "@tailwindcss/typography": "^0.5.13",
    "@tanstack/react-query": "^5.51.23",
    "axios": "^1.7.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "fabric": "^6.0.2",
    "framer-motion": "^11.3.21",
    "lucide-react": "^0.427.0",
    "next": "^14.2.5",
    "openai": "^4.55.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.2",
    "react-hot-toast": "^2.4.1",
    "sharp": "^0.33.4",
