    "autoprefixer": "^10.4.20",
    "axe-playwright": "^2.0.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.2",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
